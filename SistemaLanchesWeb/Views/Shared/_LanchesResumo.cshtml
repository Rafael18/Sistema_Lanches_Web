@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4" style="margin-top: 15px">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <p class="card-text"><img src="@Model.ImagemUrl" class="img-fluid" /></p>
            <h3>Preço: @Model.Preco.ToString("c")</h3>

            <h4><a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.Nome</a></h4>

            <p>@Model.DescricaoCurta</p>

            <div>
                <p class="button">
                    <a class="btn btn-primary" id="carButton" asp-controller="CarrinhoCompra"
                    asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                        Incluir no Carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>